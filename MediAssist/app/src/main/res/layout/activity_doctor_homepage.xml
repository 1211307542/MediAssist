<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorHomepageActivity">

    <ImageView
        android:id="@+id/profileIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Profile Icon"
        android:src="@drawable/profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewWelcomeDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Doctor"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/profileIcon"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/subheadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How can we help you today?"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewWelcomeDoctor"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/manageAvailabilityButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Manage Availability"
        android:textColor="#000000"
        android:backgroundTint="#D0E6FF"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/subheadingText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/viewAppointmentRequestsButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="View Appointment Requests"
        android:textColor="#000000"
        android:backgroundTint="#D0E6FF"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/manageAvailabilityButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/btn_view_calendar"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="View Calendar"
        android:textColor="#000000"
        android:backgroundTint="#D0E6FF"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/viewAppointmentRequestsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
